<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="1dp"
                android:right="3dp"
                android:top="10dp"
                android:bottom="10dp"
                android:drawable="@drawable/ic_keyboard_arrow_down_black_24dp">
            </item>
        </layer-list>

    </item>
    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="1dp"
                android:right="3dp"
                android:top="10dp"
                android:bottom="10dp"
                android:drawable="@drawable/ic_keyboard_arrow_up_black_24dp">
            </item>
        </layer-list>
    </item>

    <item android:drawable="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:width="80dp"
        android:height="80dp">
    </item>
</selector>